<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>
<body>
    <%- include('./partials/nav') %>
    <div class="container p-4">
        <div class="row">
            <% for( let i = 0; i < imagenes.length; i++ ) { %>
                <div class="col-md-5">
                    <div class="card text-center">
                        <div class="card-body">
                            <h3 class="card-title"><%= imagenes[i].titulo %></h3>
                            <img src="<%= imagenes[i].imagen %>" class="w-100 p-4">
                            <p><%= imagenes[i].descripcion %></p>
                            <a href="/fotos/like/<%= imagenes[i].id %>"><i class="fa-solid fa-thumbs-up card-body"></i></a><%= imagenes[i].likes %>
                            <a href="/fotos/dislike/<%= imagenes[i].id %>"><i class="fa-solid fa-thumbs-down card-body"></i></a><%= imagenes[i].dislikes %>
                            <a href="/fotos/delete/<%= imagenes[i].id %>" class="btn btn-danger">Delete</a>
                            <a href="/fotos/edit/<%= imagenes[i].id %>" class="btn btn-secondary">Edit</a>
                            <a href="/fotos/comentarios/<%= imagenes[i].id %>" class="btn btn-secondary w-100">Comentarios</a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
</body>
</html>